<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DBApp.ClientPage">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Entry x:Name="entryName" Text="{Binding Name}" Placeholder="Enter Name"/>
            <Entry x:Name="entrySurname" Text="{Binding Surname}" Placeholder="Enter Surname"/>

            <Button Text="Dodaj klienta" Clicked="OnAddClientClicked"/>
            <Button Text="Usuń klienta" Clicked="OnDeleteClientClicked" IsEnabled="{Binding SelectedClient}"/>

            <ListView x:Name="listClients" ItemsSource="{Binding Clients}" SelectedItem="{Binding SelectedClient}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}" Detail="{Binding Surname}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>